<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/upper_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/message_user"
            android:text="MiloBoi"
            android:layout_weight="0.4"
            android:textStyle="normal|bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/message_user"
            android:layout_alignParentEnd="true"
            android:text="12:24 20-12-2017"
            android:layout_weight="0.75"
            android:layout_gravity="right"
            android:id="@+id/message_time" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lower_item"
        android:layout_below="@+id/upper_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/message_user"
            android:layout_alignParentStart="true"
            android:layout_marginTop="5dp"
            android:id="@+id/message_text"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:text="MiloBoi is Bored"
            android:textStyle="normal|bold"
            android:layout_weight="0.3"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/ic_descr"
            android:src="@drawable/ic_description" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/ic_cam"
            android:src="@drawable/ic_camera" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/ic_mic"
            android:src="@drawable/ic_mic" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:id="@+id/ic_loc"
            android:src="@drawable/ic_location" />

    </LinearLayout>

</RelativeLayout>